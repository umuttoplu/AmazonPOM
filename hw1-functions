#Python Functions 1/3
print("***BEGINNING OF 1st Question***\n")
def bolunenSayiBulma(min_sayi, max_sayi, bolunecek_sayi):
    bolunen_sayi = []
    for i in range(min_sayi,max_sayi):
        if (i % bolunecek_sayi == 0):
            bolunen_sayi.append(i)
    print(bolunen_sayi)
    toplam_sayi = len(bolunen_sayi)
    print(f"{min_sayi} ile {max_sayi} arasındaki bölünen toplam sayi {toplam_sayi}")

bolunenSayiBulma(1,50,5)


#Python Functions 2/3
print("***BEGINNING OF 2nd Question***\n")

def sayiAtama(sayi):
    #atananSayi = sayi
    if sayi>=10 and sayi<100:
        atananSayi = sayi
        sayiOkunusu(atananSayi)
    else:
        print("Geçerli değer girmediniz.")

def sayiOkunusu(sayi):
    okunacakSayi = sayi
    birler =  ["","Bir","İki","Üç","Dört","Beş","Altı","Yedi","Sekiz","Dokuz"]
    onlar = ["","On","Yirmi","Otuz","Kırk","Elli","Altmış","Yetmiş","Seksen","Doksan"]
    birinciBasamak = okunacakSayi % 10
    ikinciBasamak = okunacakSayi // 10
    print(f"{okunacakSayi} okunuşu: "+onlar[ikinciBasamak]+""+birler[birinciBasamak])

sayi = int(input("İki basamaklı sayı giriniz: "))
sayiAtama(sayi)


#Python Functions 3/3
print("***BEGINNING OF 3rd Question***\n")

sinav_puanlari = []
vize1 = int(input("Vize1 Notu:"))
while vize1 < 0 or vize1 > 100:
        vize1 = int(input("Vize1 Notunu 0-100 arasında tekrar giriniz. Vize1:"))
sinav_puanlari.append(vize1)


vize2 = int(input("Vize2 Notu:"))
while vize2 < 0 or vize2 > 100:
        vize2 = int(input("Vize2 Notunu 0-100 arasında tekrar giriniz. Vize2:"))
sinav_puanlari.append(vize2)


final = int(input("Final Notu:"))
while final < 0 or final > 100:
    final = int(input("Final Notunu 0-100 arasında tekrar giriniz. Final:"))
sinav_puanlari.append(final)


print(sinav_puanlari)
ortalama_puan = vize1*0.3 + vize2*0.3 + final*0.4

print(ortalama_puan)
if ortalama_puan>=90:
    print("Harf Notunuz: AA")
elif ortalama_puan>=85:
    print("Harf Notunuz: BA")
elif ortalama_puan>=80:
    print("Harf Notunuz: BB")
elif ortalama_puan>=75:
    print("Harf Notunuz: CB")
elif ortalama_puan>=70:
    print("Harf Notunuz: CC")
elif ortalama_puan>=65:
    print("Harf Notunuz: DC")
elif ortalama_puan>=60:
    print("Harf Notunuz: DD")
elif ortalama_puan>=55:
    print("Harf Notunuz: FD")
elif ortalama_puan<55:
    print("Harf Notunuz: FF")
else:
    print("Geçerli bir değer giriniz.!")


print("\n***END OF 1st Question***\n")
